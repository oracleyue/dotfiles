{
    // general
    "workbench.colorTheme": "Dracula Theme", // default enable not working
    "editor.fontSize": 14,
    "editor.fontFamily": "SF Mono, Roboto Mono, Courier New, monospace",

    // security
    "security.workspace.trust.enabled": false,

    // Trailing Spaces
    "trailing-spaces.trimOnSave": true,
    "trailing-spaces.syntaxIgnore": [
        "markdown"
    ],

    // Matlab
    "files.associations": {
        "*.m": "matlab"
    },

    // Python
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "terminal.integrated.commandsToSkipShell": [
        "matlab.interrupt"
    ],
}