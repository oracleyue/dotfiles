# copy .profle to .bashrc in Mac OS X, which will be used by emacs for its term, xterm, etc.
# the system of OS X use .profile to configure its console

# set the locale
export LC_ALL=en_US.UTF-8  
export LANG=en_US.UTF-8

# To color the bash
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced
export PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# adding user's local bin as preference
export PATH=/usr/local/bin:${PATH}
# adding the texlive bin to PATH
export PATH=${PATH}:/usr/local/texlive/2014/bin/x86_64-darwin

# oracleyue-defained alias
alias ll='ls -Alh'
alias view='vim -R'
alias rm='rm -i'
alias cp='cp -r -i'
alias du='du -h -d 1'
alias df='df -h'
alias rsync='rsync -aP'


# oracleyue-defined environment variables
export EDITOR="vim"

# oracleyue: setting shortcuts for working paths
export prj=~/Workspace/matlab/Feng_prj_HPC
export orgnote=~/Public/Dropbox/oracleyue/OrgNote
#export gitrepo=~/FileArchives/arch
#export ATLAS=~/Public/ATLAS/prj.backup
export gaiapath=gaia:/work/users/zyue/matlab/Feng_prj_HPC


