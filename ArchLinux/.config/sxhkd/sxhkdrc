# Basic binds
# super + Return
#     $TERMINAL
# super + d
#     i3-dmenu-desktop --dmenu="dmenu -fn 'monospace-10'"
#     dmenu_run
super + r
	$TERMINAL -e $FILE
super + i
	$TERMINAL -e htop
super + shift + a
	$TERMINAL -e pulsemixer
super + o
        goldendict
super + p
        dolphin
# super + shift + w
# 	$BROWSER

# Et cetera...
super + Insert
	showclip
# super + shift + x
# 	prompt "Shutdown computer?" "sudo -A shutdown -h now"
# super + shift + BackSpace
# 	prompt "Reboot computer?" "sudo -A shutdown -r now"
# super + x
# 	mpc pause; pauseallmpv; i3lock -e -f -c 1d2021; xset dpms force off
XF86Launch1
	xset dpms force off
XF86AudioMute
	lmc mute
XF86AudioLowerVolume
	lmc down 5
shift+XF86AudioLowerVolume
	lmc down 10
control+XF86AudioLowerVolume
	lmc down 1
XF86AudioRaiseVolume
	lmc up 5
shift+XF86AudioRaiseVolume
	lmc up 10
control+XF86AudioRaiseVolume
	lmc up 1
XF86AudioNext
	lmc next
XF86AudioPlay
	lmc toggle
XF86AudioPrev
	lmc prev
XF86AudioStop
	lmc toggle
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15


