# Basic binds
super + r
    $TERMINAL -e $FILE $HOME
super + i
    $TERMINAL -e htop
super + m
    $TERMINAL -e ncmpcpp
super + p
	mpc toggle >/dev/null 2>&1
super + shift + a
    $TERMINAL -e pulsemixer
super + o
    goldendict >/dev/null 2>&1
super + shift + p
    dolphin

# Et cetera...
# Browse and copy AcFun emoji (when found and opened, press "C-x C-c" to
# copy the image into clipboard. Request "xclip" installed)
super + x
    sxiv -t ~/Downloads/acfun_emoji/

# Audio
XF86Launch1
    xset dpms force off
XF86AudioMute
    lmc mute
XF86AudioLowerVolume
    lmc down 5
shift+XF86AudioLowerVolume
    lmc down 10
control+XF86AudioLowerVolume
    lmc down 1
XF86AudioRaiseVolume
    lmc up 5
shift+XF86AudioRaiseVolume
    lmc up 10
control+XF86AudioRaiseVolume
    lmc up 1
XF86AudioNext
    lmc next
XF86AudioPlay
    lmc toggle
XF86AudioPrev
    lmc prev
XF86AudioStop
    lmc toggle
XF86MonBrightnessDown
    xbacklight -dec 15
XF86MonBrightnessUp
    xbacklight -inc 15

# Show help docs
super + F1
    $TERMINAL -e $HOME/bin/i3cmds/kbindhelp
super + F2
    $VIEWER $HOME/Books/References/latex-symbols.pdf
# Change display
super + F3
    displayselect

