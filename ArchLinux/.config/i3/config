    focused_workspace  #2C2C2C #93E0E3 #2C2C2C
    active_workspace   #2C2C2C #3F3F3F #DCDCCC
    inactive_workspace #2C2C2C #3F3F3F #DCDCCC
    urgent_workspace   #2C2C2C #900000 #DCDCCC
    binding_mode       #2C2C2C #900000 #DCDCCC
  }
}
